<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDE4F7"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoimageView1"
                android:layout_width="411dp"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                tools:src="@drawable/logoimage" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="uid"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <TextView
                android:id="@+id/detailUidTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진단 날짜"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="TextView"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <ImageView
                android:id="@+id/myImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진단결과"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <TextView
                android:id="@+id/detailResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="TextView"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"
                android:textSize="16dp"
                android:lineSpacingMultiplier="1.2"
                android:lineSpacingExtra="4dp"/>


            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="50dp"
                android:text="설명들어오는텍스트뷰"
                android:gravity="center_horizontal"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="같은 퍼스널 컬러의 연예인"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <TextView
                android:id="@+id/similarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="TextView"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Color"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <ImageView
                android:id="@+id/imageViewBest"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginBottom="50dp"
                android:contentDescription="@+string/best_image"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textViewW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worst Color"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <ImageView
                android:id="@+id/imageViewWorst"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginBottom="50dp"
                android:contentDescription="@+string/worst_image"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품"
                android:textSize="16dp"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

            <TextView
                android:id="@+id/productTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="TextView"
                android:textSize="16dp"
                android:fontFamily="@font/kcchanbit"
                android:textColor="#FF07194B"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>